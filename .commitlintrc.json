{
  "extends": ["@commitlint/config-conventional"],
  "rules": {
    "type-enum": [
      2,
      "always",
      [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "perf",
        "test",
        "chore",
        "ci",
        "build"
      ]
    ],
    "scope-empty": [2, "never"],
    "subject-case": [2, "always", "sentence-case"],
    "body-leading-blank": [2, "always"]
  }
}